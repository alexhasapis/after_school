<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<table>
  <thead>
    <tr>
      <th>Dbn</th>
      <th>Name</th>
      <th>Boro</th>
      <th>Building</th>
      <th>Starting grade</th>
      <th>Finishing grade</th>
      <th>Address</th>
      <th>Website</th>
      <th>Total students</th>
      <th>School type</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.dbn %></td>
        <td><%= school.name %></td>
        <td><%= school.boro %></td>
        <td><%= school.building %></td>
        <td><%= school.starting_grade %></td>
        <td><%= school.finishing_grade %></td>
        <td><%= school.address %></td>
        <td><%= school.website %></td>
        <td><%= school.total_students %></td>
        <td><%= school.school_type %></td>
        <td><%= school.latitude %></td>
        <td><%= school.longitude %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

