<p id="notice"><%= notice %></p>

<h1>High Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Boro</th>
      <th>Starting grade</th>
      <th>Finishing grade</th>
      <th>School type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= link_to school.name, school %></td>
        <td><%= school.boro %></td>
        <td><%= school.starting_grade %></td>
        <td><%= school.finishing_grade %></td>
        <td><%= school.school_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>
